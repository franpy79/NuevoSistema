<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Departamentos</h1>
        </div>
        <p id="notice"><%= notice %></p>
        <section>
          <table>
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Funcionario</th>
                <th>Telefono</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @departaments.each do |departament| %>
                <tr>
                  <td><%= departament.name %></td>
                  <td><%= departament.manager %></td>
                  <td><%= departament.telephone %></td>
                  <td><%= link_to 'ver', departament %></td>
                  <td><%= link_to 'Editar', edit_departament_path(departament) %></td>
                  <td><%= link_to 'Eliminar', departament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </section>
        <br>
        <%= link_to 'New Departament', new_departament_path %>
