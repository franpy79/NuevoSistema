<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">DEPARTAMENTOS</h1>
        </div>
        <p id="notice"><%= notice %></p>
        <section>
          <div class="card">
            <div class="card-body">
              <p align="right"><%= link_to 'Agregar +', new_departament_path, class: "btn btn-success btn-sm" %></p>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th scope="col">Nombre</th>
                      <th scope="col">Funcionario</th>
                      <th scope="col">Teléfono</th>
                      <th scope="col">Opción</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @departaments.each do |departament| %>
                      <tr>
                        <td><%= departament.name %></td>
                        <td><%= departament.manager %></td>
                        <td><%= departament.telephone %></td>
                        <td><%= link_to 'Ver', departament, class: "btn btn-outline-success btn-sm"  %>
                          <%= link_to 'Editar', edit_departament_path(departament), class: "btn btn-outline-primary btn-sm" %>
                          <%= link_to 'Eliminar', departament, method: :delete, data: { confirm: 'Estas seguro?..' }, class: "btn btn-outline-danger btn-sm" %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
