<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">LISTADO </h1>
        </div>
      </div>
      <p id="notice"><%= notice %></p>
      <section>
        <div class="card">
          <div class="card-body">
            <p align="right"><%= link_to 'Agregar +', new_listado_path, class: "btn btn-success btn-sm" %></p>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Departamento</th>
                    <th scope="col">Funcionario</th>
                    <th scope="col">Equipo</th>
                    <th scope="col">Impresora</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @listados.each do |listado| %>
                    <tr>
                      <td><%= listado.departament_id %></td>
                      <td><%= listado.employee %></td>
                      <td><%= listado.equipment_id %></td>
                      <td><%= listado.printer_id %></td>
                      <td><%= link_to 'Ver', listado %></td>
                      <td><%= link_to 'Editar', edit_listado_path(listado) %></td>
                      <td><%= link_to 'Eliminar', listado, method: :delete, data: { confirm: 'Estas Seguro?'.. } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
</div>
