<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Impresoras
          <%= link_to 'New Printer', new_printer_path, class: "btn btn-secondary btn" %></h1>
        </div>
<p id="notice"><%= notice %></p>
<section>
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
    <tr>
      <th>Labelled</th>
      <th>Mark</th>
      <th>Conect</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @printers.each do |printer| %>
      <tr>
        <td><%= printer.labelled %></td>
        <td><%= printer.mark %></td>
        <td><%= printer.conect %></td>
        <td><%= link_to 'Show', printer, class: "btn btn-outline-success btn-sm"  %></td>
        <td><%= link_to 'Edit', edit_printer_path(printer), class: "btn btn-outline-primary btn-sm"  %></td>
        <td><%= link_to 'Destroy', printer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</section>

