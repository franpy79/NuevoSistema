<%= render 'shared/errors' , obj: @employee%>

	<%= form_for(@employee, :html => {class:'form-horizontal', role:'form'}) do |f|%>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :name %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :name, class:'form-control', placeholder:'employee name' , autofocus:true %>
		</div>
	</div>	
  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
		<%= form.label :email %>
		</div>
    <div class="col-sm-10">
			<%= f.text_field :email, class:'form-control', placeholder:'----' , autofocus:true %>
		</div>
	</div>
  	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit  class:'btn btn-primary' %>
		</div>
	</div>
		
	<% end %>
	<div class="col-xs-5 col-xs-offset-5">
	[ <%= link_to "Cancel request and back to equipment lists", equipments_path %> ]
	</div>