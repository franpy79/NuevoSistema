<h1 >Listing all Employees</h1>
<div >
  <%= will_paginate%>
	<% @employees.each do |employee| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li class="equipment-labelled">
						<%= link_to "#{employee.name}", employee_path(employee)%>
					</li>
					<li><small><%= pluralize(employee.equipments.count, "equipments") %></small></li>
				</div>
			</div>
		</ul>
	<% end %>
  <%= will_paginate%>	
</div>
